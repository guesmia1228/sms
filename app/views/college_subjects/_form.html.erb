<%= link_to 'BACK', college_subjects_path, class: 'btn btn-light back-home' %>

<h2>+ College Subject</h2>

<div class="form-create">
    <%= form_with model: @college_subject do |form| %>
        <%= form.label 'Name:'%>
        <%= form.text_field :name, class:'form-control', value: @college_subject.name %>
        <%= error_message(@college_subject, :name)%>
        <%= form.label 'Departament:'%>
        <%= form.collection_select :department_id, Department.all, :id, :name, {}, {class: 'classItems'} %>
        <%= form.label 'Description:'%>
        <%= form.text_area :description, class:'form-control', rows: '3', value: @college_subject.description %>
        <%= form.submit 'Submit', class:'btn btn-primary submit'%> 
    <% end%>
</div>
