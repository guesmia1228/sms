<%= link_to 'BACK', root_path, class: 'btn btn-light back-home' %>

<main>

<h2>STUDENTS</h2>

<%= link_to '+ STUDENTS', new_student_path, class: 'btn btn-light create-student' %>

<table class="table-borderless col-sm-10 bg-light">
  <thead>
    <tr>
      <th scope="col">NAME</th>
      <th scope="col">REGISTRATION</th>
      <th scope="col">COURSE</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.registration %></td>
        <td><%= student.course&.name %></td>
        <td><%= link_to 'Edit', edit_student_path(id: student.id), method: :GET  %> </td>
        <td><%= link_to 'Delete', student_path(id: student.id), method: :delete, data: { confirm: 'Tem certeza?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>


</main>


